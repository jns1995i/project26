  <section class=" width0 padding10 corner8 size14 str500 fixed bgWhite shadow3 hidden" id="alert">Code Copied!</section>

    <section class="str400 size40 black textStone800 textCenter textBalance">New Color Palette Class Names</section>

    <div id="colorPalette" class="height0 wrap gap10 padding20"></div>
    <br>
    <br>
    <section class="marginBottom50"></section>

    <script>
const colors = [
  'Red','Orange','Amber','Yellow','Lime','Green','Emerald','Teal','Cyan','Sky',
  'Blue','Indigo','Violet','Purple','Fuchsia','Pink','Rose','Slate','Gray','Zinc','Neutral','Stone','Fatigue','Army','Forest'
];

const shades = ['50','100','200','300','400','500','600','700','800','900','950'];

const container = document.getElementById('colorPalette');
const alertBox = document.getElementById('alert');

colors.forEach(color => {
  shades.forEach(shade => {
    const className = `bg${color}${shade}`;
    const labelClass = `text${color}${shade}`;

    const block = document.createElement('div');
    block.className = 'field width0 alignCenter corner10 hoverShadow2 pointer';
    block.innerHTML = `
      <div class="hpx40 wpx120 corner5 padding10 ${className}" onclick="copyText('${className}', event,'${labelClass}')">${className}</div>
      <label for="" class="size12 str500 black hidden ${labelClass}">${className}</label>
    `;
    container.appendChild(block);
  });
});

function copyText(text, e, labelClass) {
  navigator.clipboard.writeText(text).then(() => {
    // Set the text
    alertBox.innerText = `${text} copied!`;

    // Remove any previous text color classes
    alertBox.className = 'width0 padding10 corner8 size10 str500 fixed bgWhite shadow3';

    // Apply the color class from the clicked block
    alertBox.classList.add(labelClass);

    // Position the alert near the click
    const offsetX = 10;
    const offsetY = -30;
    alertBox.style.left = `${e.pageX + offsetX}px`;
    alertBox.style.top = `${e.pageY + offsetY}px`;

    // Show the alert
    alertBox.classList.remove('hidden');

    // Hide after 2 seconds
    setTimeout(() => {
      alertBox.classList.add('hidden');
    }, 2000);
  }).catch(err => {
    console.error('Failed to copy: ', err);
  });
}

</script>
    

